local function createComingSoonButton(text, xPos)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.32, 0, 1, 0)
    btn.Position = UDim2.new(xPos, 0, 0, 0)
    btn.Text = text.." ðŸ”’"
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 13
    btn.TextColor3 = Color3.fromRGB(150, 150, 150)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
    btn.AutoButtonColor = false
    btn.Parent = modeContainer
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 6)
    btnCorner.Parent = btn
    
    -- Tooltip for coming soon
    local tooltip = Instance.new("TextLabel")
    tooltip.Text = "COMING SOON"
    tooltip.Size = UDim2.new(1, 0, 0, 20)
    tooltip.Position = UDim2.new(0, 0, -1, 0)
    tooltip.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
    tooltip.TextColor3 = Color3.fromRGB(200, 200, 200)
    tooltip.Font = Enum.Font.Gotham
    tooltip.TextSize = 12
    tooltip.Visible = false
    tooltip.Parent = btn
    
    btn.MouseEnter:Connect(function()
        tooltip.Visible = true
    end)
    
    btn.MouseLeave:Connect(function()
        tooltip.Visible = false
    end)
    
    return btn
end

